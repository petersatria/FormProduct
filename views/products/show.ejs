<% layout('layouts/boilerplate') %>
<div class="col-8 offset-2 ">
	<div class="card mb-3">
		<div class="row">
			<div class="col-md-6">
				<img src="<%= product.image %> " class="img-fluid" alt="...">
			</div>
			<div class="col-md-6">
				<div class="card-body">
					<h5 class="card-title"><%= product.name %> </h5>
					<hr>
					<p class="card-text"><%= product.description%></p>
					<hr>
					<% if (product.discount) { %>
					<p class="card-text">
						<small class="text-muted text-decoration-line-through">IDR<%= product.price %>,00</small>
					</p>
					<%  product.price-= product.price*product.discount/100 %>
					<div class="d-flex">
						<p class="card-text text-danger me-2"><%= product.discount %>% </p>
						<% }%>
						<p class="card-text">IDR<%= product.price %>,00 </p>
					</div>
					<p class="card-text">
						<small class="text-muted"><%= product.location %></small>
					</p>
					<p class="card-text"><%= product.store%></p>
					<a class="card-link btn btn-info text-white" href="/products/<%=product._id%>/edit">Edit</a>
					<form class="d-inline" action="/products/<%=product._id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>