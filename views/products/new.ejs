<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">New product</h1>
	<div class="col-6 offset-3">
		<form action="/products" method="POST">
			<div class="mb-3">
				<label class="form-label" for="name">Name Product</label>
				<input class="form-control" type="text" id="name" name="product[name]" required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input class="form-control" type="text" id="image" name="product[image]" required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Product Price</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">IDR</span>
					<input type="text" class="form-control" id="price" placeholder="0" aria-label="price"
						name="product[price]" required>
					<span class=" input-group-text">.00</span>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Discount</label>
				<div class="input-group">
					<input type="text" class="form-control" id="discount" placeholder="0" aria-label="discount"
						name="product[discount]">
					<span class=" input-group-text">%</span>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Store</label>
				<input class="form-control" type="text" id="store" name="product[store]" required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input class="form-control" type="text" id="location" name="product[location]" required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" id="description" name="product[description]"
					required></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-success">Add product</button>
			</div>
		</form>
		<a href="/products">All products</a>
	</div>
</div>