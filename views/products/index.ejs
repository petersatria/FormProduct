<% layout('layouts/boilerplate') %>
<h1>All Products</h1>
<div>
	<a href="/products/new">Add Product</a>
</div>
<div class="row">
	<% for (let product of products){ %>
	<div class="col-3 mb-5">
		<div class="card mb-3 h-100">
			<img src="<%= product.image%>" class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title"><%= product.name%></h5>
			</div>
			<ul class="list-group list-group-flush  ">
				<li class="list-group-item d-flex"><% if (product.discount) { %>
					<p class="card-text me-2">
						<small class="text-muted text-decoration-line-through">IDR<%= product.price %>,00</small>
					</p>
					<%  product.price-= product.price*product.discount/100 %>
					<p class="card-text text-danger me-2"><%= product.discount %>% </p>
					<% }%>
					<p class="card-text">IDR<%= product.price %>,00 </p>
				</li>
				<li class="list-group-item text-muted"><%= product.location%></li>
			</ul>
			<div class="card-body">
				<a class="btn btn-primary" href="/products/<%= product._id  %>">View Product</a>
			</div>
		</div>
	</div>
	<% } %>
</div>