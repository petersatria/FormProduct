<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Edit Product</h1>
	<div class="col-6 offset-3">
		<form action="/products/<%= product._id %>?_method=PUT" method="POST">
			<div class="mb-3">
				<label class="form-label" for="name">Title</label>
				<input class="form-control" type="text" id="name" name="product[name]" value="<%= product.name %>"
					required>
			</div>

			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input class="form-control" type="text" id="image" name="product[image]" value="<%= product.image %> "
					required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Price</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">IDR</span>
					<input type="text" class="form-control" id="price" placeholder="0" aria-label="price"
						name="product[price]" value="<%= product.price %> " required>
					<span class=" input-group-text">,00</span>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Discount</label>
				<div class="input-group">
					<input type="text" class="form-control" id="discount" placeholder="0" aria-label="discount"
						name="product[discount]" value="<%= product.discount %> ">
					<span class=" input-group-text">%</span>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Store</label>
				<input class="form-control" type="text" id="store" name="product[store]" value="<%= product.store %> "
					required>
			</div>
			<div class=" mb-3">
				<label class="form-label" for="location">Location</label>
				<input class="form-control" type="text" id="location" name="product[location]"
					value="<%= product.location %> " required>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" id="description" name="product[description]"
					required><%= product.description %></textarea>
			</div>
			<div class="mb-3">
				<button class="btn btn-info text-white">Update Product</button>
			</div>
		</form>
		<a href="/products/<%= product._id %>">Back To Product</a>
	</div>
</div>